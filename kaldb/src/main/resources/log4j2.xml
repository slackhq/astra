<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30" status="WARN" shutdownHook="disable">
    <!-- we handle shutdown hook directly in Kaldb.addShutdownHook -->

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout  pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %notEmpty{[trace=%X{traceId}/%X{spanId}]} %c{1} - %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <!--
        Enable for DEBUG logging
        <Logger name="com.slack.kaldb.logstore.index.KalDBMergeScheduler" level="debug" additivity="true">
            <appender-ref ref="console" />
        </Logger>
        -->
        <AsyncRoot level="${env:LOG_LEVEL:-info}">
            <AppenderRef ref="console"/>
        </AsyncRoot>
    </Loggers>

</Configuration>
