      "serverPort": 8083,
      "serverAddress": "localhost",
      "requestTimeoutMs": 3000
    },
    "replicaCreationServiceConfig": {
      "schedulePeriodMins": 15,
      "replicaLifespanMins": 1440,
      "replicaSets": [
        "rep1"
      ]
