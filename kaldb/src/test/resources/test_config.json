      "zkSessionTimeoutMs": 1000,
      "zkConnectionTimeoutMs": 1500,
      "sleepBetweenRetriesMs": 500
    }
  },
  "cacheConfig": {
    "slotsPerInstance": 10,
    "dataDirectory": "/tmp",
    "serverConfig": {
      "serverPort": 8082,
      "serverAddress": "localhost",
      "requestTimeoutMs": 3000
    },
    "defaultQueryTimeoutMs": 1500
  },
  "managerConfig": {
    "eventAggregationSecs": 10,
    "scheduleInitialDelayMins": 1,
